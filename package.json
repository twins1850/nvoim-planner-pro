{
  "name": "nvoim-planner-pro",
  "version": "2.1.0",
  "description": "앤보임 영어회화 관리 시스템 - Supabase 기반 리뉴얼",
  "main": "index.js",
  "scripts": {
    "build": "npm run planner-web:build",
    "start": "npm run planner-web:start",
    "dev": "concurrently \"npm run planner-web:dev\" \"npm run student-mobile:start\"",
    "planner-web:dev": "cd apps/planner-web && npm run dev",
    "planner-web:build": "cd apps/planner-web && npm run build",
    "planner-web:start": "cd apps/planner-web && npm run start",
    "student-mobile:start": "cd apps/student-mobile && npx expo start",
    "student-mobile:ios": "cd apps/student-mobile && npx expo run:ios",
    "student-mobile:android": "cd apps/student-mobile && npx expo run:android",
    "student-mobile:web": "cd apps/student-mobile && npx expo start --web",
    "install:all": "npm install && npm run install:planner-web && npm run install:student-mobile",
    "install:planner-web": "cd apps/planner-web && npm install",
    "install:student-mobile": "cd apps/student-mobile && npm install",
    "test": "npm run test:planner-web && npm run test:student-mobile",
    "test:planner-web": "cd apps/planner-web && npm test",
    "test:student-mobile": "cd apps/student-mobile && npm test",
    "lint": "npm run lint:planner-web",
    "lint:planner-web": "cd apps/planner-web && npm run lint",
    "typecheck": "npm run typecheck:planner-web",
    "typecheck:planner-web": "cd apps/planner-web && npm run type-check"
  },
  "keywords": ["react-native", "education", "ai", "english-learning"],
  "author": "앤보임",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}